/**
 * Memory of 16K registers, each 16 bit-wide. Out holds the value
 * stored at the memory location specified by address. If load==1, then 
 * the in value is loaded into the memory location specified by address 
 * (the loaded value will be emitted to out from the next time step onward).
 */

CHIP RAM16K {
    IN in[16], load, address[14];
    OUT out[16];

    PARTS:
    RAM4K(address=address[2..13], load=load0, in=in, out=out0);
RAM4K(address=address[2..13], load=load1, in=in, out=out1);
RAM4K(address=address[2..13], load=load2, in=in, out=out2);
RAM4K(address=address[2..13], load=load3, in=in, out=out3);

    DMux4Way(sel=address[0..1], in=load, a=load0, b=load1, c=load2, d=load3);
    Mux4Way16(sel=address[0..1], a=out0, b=out1, c=out2, d=out3, out=out);
}